do
  -- @section chords
  setkey' 0 ("3 2") "lydian mixolydian"
  setkey' 1 (-2) "mixolydian"
  piano $ cat
    [ t' 0 "[-7,-3,0,2,6]"
    , t' 0 ("0 0" |+  "[-3,0,2,6]")
