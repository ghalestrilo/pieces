do
  -- @section brass
  setkey' 2 "3" "lydian"
  piano $ silence
  mc  [ t ("0@3 0 . ~ . ~ <0 1> . ~" |- 1)
      -- , __
      , n "0(3,8) . <[~ 0!2 ~]!3 0*2>" # velocity 1
      , fast 4 $ n "0*2" # open ("4 1" / 10)
      , __
      , n "[~ 0]*2"
      , fast 4 $ n "0*4" # open ("1 3 4 1" |/ 10)
      ]
  mm $ stack
    [ t . fast 2 . cat
      $ l "~ ~ [7 6] [~ 5] "
          " [~ 3] ~ [7 6] [~ 5]"
          "[~ 3] [~ 3] 1 3"
          "4 3 1 [3 5]"
          "~ ~ [7 6] [~ 5]"
          "[~ 3]!2 7 8"
          "5 . 3 3 . 0 1 . 3 1"
          "4 [3 . 4 3] [1 . 3 1] [0 1]"
    , cat
      [ t' 2 $ "0@3 0 . ~ . ~ 0 . ~" |+ "[-7,-3,0,2,6]"
      , t' 0 ("[0@3 0 . ~]*2"        |+  "[-3,0,2,6]")
      , t' 2 $ "0@3 0 . ~ . ~ 0 . ~" |+ "[-7,-3,0,2,6]"
      , fastcat
        [ t' 0 $ "0@3 0 . ~" |+ 2 + "[-7,-3,0,2,6]"
        , t' 1 $ "0@3 0 . ~" |+ "[0,2,6,8]"
        ]
      ] # octave 4
   ]


