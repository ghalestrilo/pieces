  p "chords" ## [kbdi # sus 1.7 # bus # octave 4 # orbit 1 # velocity 0.4]
    $ fast 2
    $ (tonal (-3) "chromatic" . cat)
    $ l "0'maj7" "~"
        "0'maj7" "~"
        "<4'min7 -1'min7>" (cat ["5" |+ "[0,4,10,14]", "-1" |+ "[0,3,7,11]"])
  p "drums" $ (n . stack)
    [ "5*4"
