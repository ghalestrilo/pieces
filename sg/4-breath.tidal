do
  -- @name comeback
  all ((|* speed 0.9) . (# bus' 0.3 0.3) . (|* gain 1.04))
  let kbdi = s "supervibe" # sus 0.3 # resonance 0.13 # modfreq 0 # gain 1
  mel [cat phrase]
  p "bass" $ fast 2
    $ (t . cat)
      [ "0", "7!2 ~@2"
      , "0", "7!2 6!2"
      , "~ 5 4 2", "4 5 6 1"
      ]
