do
  -- @setup
  setcps (140/120)
  setkey "c" "lydian"

let reface pat = p "reface" $ pat # s "reface" # orbit 0 # midichan 0

do
  -- @intro
  p "drums" $ stack
    [ s "bsr*2" ]
  reface $ stack
    [ t ("{0@2 [0 ~] [0 ~] ~0@2 [0 ~] [0 ~] ~@3  0@2 [0 ~] [0 ~] ~@2 0@2 [0 ~] [0 ~] }%4" |+ "[-2,-1]") # octave 4
    , t (slow (14/2) $ ring "0 2 3 4 6 8 9" "0@3 0@3 0@2 0@2 0@18") # sus 12
    , slow (14/2) $ note ("-1@10 0@18") |+ t "[-3,0,2,6,8 9]" # octave 4
    ]


