let reface = keys
    lt = bass
    ht = lead2
    mm = lead1

do
  -- @name ASTRO REPRISE
  hush 

-- dawbank "keys" 0

all
  $ swingBy (1/8) 8
  . byshuf (shuffle "^shuf")
  . byacc (chop "[16|8|4]" . (|* amp 0.3))
  -- . (inside 2 . whenmod 8 7) (lock (1/4) 1.5)
  -- . (inside 2 . whenmod 8 7) (lock (1/8) 1.5)
  -- . (inside 2 . whenmod 8 7) (lock (1/8) 0.25)
  . (inside 2 . whenmod 8 6) (lock (1/2) 3.5)
  -- . (# sus 0.15)
  -- . lock 2 0
  -- . lock 0.25 3.5
  -- . lock 0.25 0
  -- . (# amp 0.25)

let loadbanks songname = mapM_ (loadSynthPreset songname) dawchans
in loadbanks "astro_2"

do
  -- hush
  loadbanks "astro_2"
  trbank 1
  setI "shuf" "1"
  all $ swingBy (1/10) 8 . byshuf (shuffle "^shuf") . byacc (chop "[16|8|4]" . (|* amp 0.3))
  setcps (93/120/2)
  -- setcps (86/120/2)
  htoff 1
  setkey' 0 (-6) $ "lydian"
  setkey' 1 (-1) "lydian"
  setkey' 2 (-2) "mixolydian"
  setkey' 3 (-6) $ "lydian@5 neapolitanMajor@3"
  setkey' 4 (-6) $ "major"
  setkey' 5 (-2) "mixolydian"
  setkey' 6 (-1) "lydian"
  bank "mm" 11

do
  -- @name intro
  hush
  keys
    $ note
    $ fast 2
    $ cat
    $ (fmap (k 0)
      [ "0@5 0 ~@2" |+ 9
      , "0@5 0 ~@2" |+ 9
      , "8@5 7 ~@2"
      , "5@5 4 ~@2"
      , "2"
      , "~"
      , "~"
      , "~"
      ]
    )

do
  -- @name drums
  ch $ fast 8
    $ byshuf (chop "2 1") $ n "0*2"
    # amp "<0.42 0.33>"

do
  -- @name preface
  lead1 $ fast 2 $ (note . cat)
    ([ k 2 $ "2 4 5 -5 4 -7 4 5" |+ 2
    , k 2 $ "2 4 5 -5 4 -7 1 2" |+ 2
    , k 1 $ "2 3 4 -5 3 -7 2 4" |+ 2
    , k 1 $ "2 4 5 -3 4 7 2 5" |- 2
    ]
    ++ (take 4 $ repeat (k 0 $ "2 4 5 -5 4 -7 2 5")))
    # octave 4
    # amp 0.2
    # sus 0.2
    -- # sustainpedal 1

-- setF "dawlatency" 0

do
  -- @name intro
  keys
    $ slow 2
    $ cat [
      fast 4 
      $ nokc [5,5,6,0]
        [ "[2,7]@5 [4,7] ~@2"
        , "[2,7]@5 [4,7] ~@2"
        , "[0,2,5]@5 [1,2,4] ~@2"
        , "[1,2,5]@5 [-1,2,4] ~@2"
        ]
    , nok 0 "[-3,0,2,6]" # amp 0.3
    ]

do
  -- @name drums 2
  -- start muted bd + lt. raise sd first
  bd $ fast 2 $ n "0 ~ . [~ 0 | ~ [~ 0] | ~ 0 ~ ~]"
  sd $ fast 2 $ n "~ 0"
  -- hc $ fast 2 $ n "~ 0"
  bass
    $ fast 2
    $ (note . (|- 12) . cat)
      ([ k 2 "0@3 0 ~@2 0@2"
      , k 2 "~@2 0 ~@2 0 ~@2"
      , k 1 "0@3 0 ~@2 0@2"
      , k 1 $ "~@2 0 ~@2 0 ~@2"
      ]
      ++ fmap (k 0) ["0@3 0 ~@2 0@2", "~@2 0 ~@2 0 ~@2", "0@3 0 ~@2 0@2", "0 -0 0 ~"]
    )
    # sus 0.2


do
  -- @name hold
  hush
  bd $ n "0(3,8) . ~@2 0@3 0@3"
  ch $ fast 8
    $ n "0*<3 1> 0"
    # amp "<0.42 0.33>"
  setF "plink" 0
  bass
    $ nok 0 "0(3,8) . ~@2 0@3 <0 -3>@3"
    # octave 4
    # sus 0.2
  keys
    $ fast 2
    $ (note . cat . fmap (+| "0@5 0 ~@2"))
    [ k 0 $ "[-2,0,2,7]" |+ 2
    , k 0 $ "[-3,0,4,7]" |+ 2
    , k 0 $ "[0,2,3 4,7 5]" |+ 1
    , k 1 $ "[0,2,5 4,7 6]" |- 5
    ]
    # octave 5
    # amp 0.4
  -- htoff (-3)
  -- htoff 0
  lead2
    $ fast 2
    $ nokc [0,0,3]
    -- $ nokc [0,0,3]
    [ "2 4 5 2 4 0 4 5"
    , "6 8 9 6 8 -4 -2 -1"
    , "1 2 3 1 2 -2 2 4"
    ]
    # octave 6

-- setF "dawlatency" 0

    -- # sus 1.4
    -- # sus 0.12

do
  -- @name drums
  bd $ n "0 ~ ~ 0? ~ ~ 0? ~ . ~ 0 ~ [~ 0]"
  sd $ n "[~ 0]*2"
  -- ch $ fast 8 $ n "0*2" # amp "0.7 0.2"

do
  -- @name full
  setF "plink" 0
  setcps (92/120/2)
  bd $ n "[0@3 0]*2"
  -- bd $ n "0 ~ ~ 0? ~ ~ 0? ~ . ~ 0 ~ [~ 0]"
  sd $ n "[~ 0]*2"
  ch $ n "0*16" # amp "[0.37 0.1]*8"  
  bd $ n "0  ~ ~ 0? ~@4. [~ 0] 0 ~ [~ 0]"
  -- d3 $ fast 2 $ n "~ 0 0 ~"
  ht silence
  lead1 silence
  lead2
    $ fast 2
    $ (|+ note 12)
    -- $ sometimesBy "^plink" (# (octave (5 |+ irand 3) # sus 4))
    $ (note . cat)
    -- $ (note . cat . fmap (k 0) . fmap (rarely (|+ ("[1 0@3]*4" |* (irand 8) |- 4))))
    (
      fmap (k 0) [
      "2 4 5 [2|-1] 4 0 4 5"
    , "6 8 9 6 8 -4 -2 -1"
    , "1 2 3 1 2 -1 1 2"
    ] ++ fmap (k 1) [
      "[0 1 2 0 1 -2 1 2 | 0 1 2 3 6 5 3 2]"
    ])
    # sus 0.2
    # amp 0.8
    # octave 4
  bass
    $ fast 2
    $ (note . (|- 12) . cat)
      ([ k 0 "0(3,8)"
      , k 0 "[~@2 0 ~@2 0 ~@2 | [0 ~] [-3 ~] [0 ~] ~]"
      , k 0 $ "0(3,8)" |+ 1
      , k 1 "~@2 0 ~@2 4 ~@2"
      ]
    )
    # amp 0.3


do
  -- @name steal
  hush
  bd $ "0  ~ ~ 0? ~@4. [~ 0] 0 ~ [~ 0]" # amp 0.5
  sd $ fast 2 $ n "~ [0@3 0??]" # amp ("0.55@3 [0.15|0.15|0.15|0.4]" |* 0.8)
  oh $ sometimes (chop 2) $ degrade (n "0*16") # amp (range 0.01 0.05 $ rand)
  ch $ fast 8 $ n "0*2" # amp "0.1 0.01"
  rs $ fast 2 $ n "0*[1|1|2] 0!2 0*2" # amp 0.1
  lead1 $ fast 2
    $ stack [
      (note . cat)
      ([ k 0 $ "-7 6 9 5 . 8 6 4 2"
       , k 0 $ "-7 1 ~ [6, ~@2 3@3,~@3 1@2]@5"
       , k 0 $ "[-6 0 ~ [5, ~@2 2@3,~@3 0@2]@5]"
       , k 1 $ "[-3 0 ~ [5, ~@2 2@3,~@3 -1@2]@5]" |- 4
       , k 0 $ "-7 6 9 5 . 8 6 4 2"
       , k 0 $ "-7 1 ~ [6, ~@2 3@3,~@3 1@2]@5"
       , k 0 $ press $ off 0 ((0.03 <~) . press . (|+ 7)) $ "2 4 5 6"
       , k 0 $ press $ off 0 ((0.03 <~) . press . (|+ 7)) $ "2 4 5 6" |+ 7
       ])
    ]
    # octave 4
  keys
      $ fast 2
      $ (note . (|+ 12) . cat)
      (
        fmap (k 0) [
        "2 4 5 [2|-1] 4 0 4 5"
      , "6 8 9 6 8 -4 -2 -1"
      , "1 2 3 1 2 -1 1 2"
      ] ++ fmap (k 1) [
        "[0 1 2 0 1 -2 1 2 | 0 1 2 3 6 5 3 2]"
      ])
      # sus 0.18
      # octave 4
  bass
    $ note
    $ (|- 12)
    $ fast 2
    $ cat
      ([ k 0 "0(3,8)"
      , k 0 "[~@2 0 ~@2 0 ~@2 | [0 ~] [-3 ~] [0 ~] ~]"
      , k 0 $ "0(3,8)" |+ 1
      , k 1 "~@2 0 ~@2 4 ~@2"
      ]
    )
  cc $ n "[~ 0]*2"
  -- hc $ fast 2 "~ <0*2 ~>"
  hc $ f2 "~@7 0"
  rc $ fast 4 $ n "0*2" # amp "0.45 0.42"


hush

do
  -- @name post-steal
  -- reface $ nok 0 "[-3,0,2,6,9]" +| note "0 ~ ~ 0 ~ ~ 0@4 -1 ~ 0 ~ ~ ~" # amp 0.5 # octave 4
  keys
    $ fast 2
    $ (note . cat . fmap (+| "0@5 0 ~@2"))
    [ k 0 $ "[-2,0,2,7]" |+ 2
    , k 0 $ "[-3,0,4,7]" |+ 2
    , k 0 $ "[0,2,3 4,7 5]" |+ 1
    , k 1 $ "[0,2 3,5 4,7 6]" |- 5
    ] # amp 0.4 # octave 5
  keys . f2
    $ ((1 / 8) <~)
    $ nokc [0,0,0,1]
    [ "-1@2 1 2 -3@2 1 2"
    , "-1@2 1 2 -3@2 1 2"
    , "1@2 2 3 1@2 2 3"
    , "0@2 1 2 -1@2 1 2"
    ]
  lead2
    $ fast 2
    $ (# octave 5)
    $ (note . cat)
    (
      fmap (k 0) [
      "2 4 5 [2|-1] 4 0 4 5"
    , "6 8 9 6 8 -4 -2 -1"
    , "1 2 3 1 2 -1 1 2"
    ] ++ fmap (k 1) [
      "[0 1 2 0 1 -2 1 2 | 0 1 2 3 6 5 3 2]"
    ])
    # sus 0.18
    # amp 0.7

do
  -- @name closing hold
  bass $ nok 0 "0" +| note "0 ~ ~ 0 ~ ~ 0@4 -1 ~ 0 ~ ~ ~" # amp 0.8 # octave 4
  bd $ "0 ~ ~ ~ 0 ~ 0 ~ ~ ~ 0 ~ 0 ~ ~ ~" # amp 0.48
  sd $ "~ ~ ~ 0 ~ ~ ~ ~ ~ 0 ~ ~ ~ ~ ~ 0"
  rc $ fast 4 $ n "0*2" # amp "0.45 0.42"
  ch $ fast 4
    $ n "0 0 0*2 0"
    # amp "<0.42 0.33>"
    # sus (rarely (const "6 0.5@3") 0.5 |/ 10)
  setI "shuf" "[1 [8|16]!3]*2"
  ht silence

do
  ch silence
  bd silence
  sd silence
  hc silence
  cc silence
  rc silence
  rs silence


all
  $ swingBy (1/8) 8
  . byshuf (shuffle "^shuf")
  . byacc (chop "[16|8|4]" . (|* amp 0.3))
