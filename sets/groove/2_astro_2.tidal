do
  -- @name ASTRO REPRISE
  hush 

do
  -- @name intro
  hush
  trbank 101
  all $ swingBy (1/12) 8
  setcps (92/120/2)
  -- setcps (86/120/2)
  setkey' 0 (-6) "lydian"
  setkey' 1 (-1) "lydian"
  setkey' 2 (-2) "mixolydian"

  mt
    $ note
    $ (|- 12)
    $ fast 2
    $ (cat)
    (fmap (k 0)
      [ "0@5 0 ~@2" |+ 9
      , "0@5 0 ~@2" |+ 9
      , "8@5 7 ~@2"
      , "5@5 4 ~@2"
      , "2"
      , "~"
      , "~"
      , "~"
      ]
    )

do
  -- @name drums
  bd $ fast 2 $ n "0 ~ . [~ 0 | ~ [~ 0] | ~ 0 ~ ~]"
  sd $ fast 2 $ n "~ 0"
  ch $ fast 2 $ n "0*4" # amp "[0.42 0.33]*2"

do
  -- @name preface
  reface $ fast 2 $ (note . cat)
    ([ k 2 $ "2 4 5 2 4 0 4 5" |+ 2
    , k 2 $ "2 4 5 2 4 0 1 2" |+ 2
    , k 1 $ "2 3 4 2 3 0 2 4" |+ 2
    , k 1 $ "2 4 5 2 4 0 2 5" |- 2
    ]
    ++ (take 4 $ repeat (k 0 $ "2 4 5 2 4 0 2 5")))
    # octave 5
    # amp 0.6
    # sus 2
    # sustainpedal 1

do
  -- @name bassline
  lt
    $ fast 2
    $ (note . cat)
      ([ k 2 "0 2 4 7"
      , k 2 "0 2 4 7"
      , k 1 "0 2 4 6"
      , k 1 $ "-2 -1 1 4"
      ]
      ++ (take 4 $ repeat (k 0 "0 2 4 6"))
    )
    # amp 0.8

do
  -- @name drums 2
  bd $ fast 2 $ n "0 ~ . [~ 0 | ~ [~ 0] | ~ 0 ~ ~]"
  sd $ fast 2 $ n "~ 0"
  ch $ fast 8
    $ sometimes (chop 2) $ n "0"
    # amp "<0.42 0.33>"

do
  -- @name bluegrass
  reface
    $ fast 2
    $ (note . cat)
      ([ k 2 "[0 2 4 7, 14@3 13@2 14@3]"
      , k 2 "[0 2 4 7, 14@3 13@2 14@3]"
      , k 1 "[0 2 4 6, 13@3 11@2 13@3]"
      , k 1 $ "[-2 -1 1 4, 13@3 11@2 13@3]"
      ] ++ (take 4 $ repeat (k 0 "[0 2 4 6, 13@3 [10|11]@2 13@3]")))
    # octave 4
    # amp 0.8

do
  -- @name hold
  hush
  setF "plink" 0
  lt $ nok 0 "0(3,8) . ~@2 0@3 0@3"
    -- # octave 3
    # amp 0.7
    # sus 0.1
  mm
    $ fast 2
    $ (note . cat . fmap (+| "0@5 0 ~@2"))
    [ k 0 $ "[-2,0,2,7]" |+ 2
    , k 0 $ "[0,2,5,7]" |+ 2
    , k 0 $ "[0,2,3 4,7 5]" |+ 1
    , k 1 $ "[0,2,5 4,7 6]" |- 5
    ]
    -- # octave 5
    # amp 0.5
  ht
    $ fast 2
    -- $ sometimesBy "^plink" (# (octave (5 |+ irand 3) # sus 4))
    -- $ (note . cat . fmap (k 0) . fmap (rarely (|+ ("[1 0@3]*4" |* (irand 8) |- 4))))
    $ (nok 0 . (|+ 7) . cat)
    [ "2 4 5 2 4 0 4 5"
    , "6 8 9 6 8 -4 -2 -1"
    , "1 2 3 1 2 -1 2 5"
    ]
    -- # sus 1.4
    # amp 0.5

do
  -- @name drums
  bd $ n "0 . ~ 0 ~@2"
  bd $ n "[0@3 0]*2"  
  bd $ n "0 ~ ~ 0? ~ ~ 0? ~ . ~ 0 ~ [~ 0]"
  sd $ n "[~ 0]*2"
  ch $ fast 8 $ n "0*2" # amp "0.7 0.2"

do
  -- @name full
  setF "plink" 0
  setcps (90/120/2)
  bd $ n "[0@3 0]*2"
  -- bd $ n "0 ~ ~ 0? ~ ~ 0? ~ . ~ 0 ~ [~ 0]"
  sd $ n "[~ 0]*2"
  ch $ n "0*16" # amp "[0.37 0.1]*8"  
  bd $ n "0  ~ ~ 0? ~@4. [~ 0] 0 ~ [~ 0]"
  -- d3 $ fast 2 $ n "~ 0 0 ~"
  ht silence
  mt
    $ fast 2
    $ (|+ note 12)
    $ sometimesBy "^plink" (# (octave (5 |+ irand 3) # sus 4))
    $ (note . cat)
    -- $ (note . cat . fmap (k 0) . fmap (rarely (|+ ("[1 0@3]*4" |* (irand 8) |- 4))))
    (
      fmap (k 0) [
      "2 4 5 [2|-1] 4 0 4 5"
    , "6 8 9 6 8 -4 -2 -1"
    , "1 2 3 1 2 -1 1 2"
    ] ++ fmap (k 1) [
      "[0 1 2 0 1 -2 1 2 | 0 1 2 3 6 5 3 2]"
    ])
    # sus 0.2
    # amp 0.4
  lt
    $ fast 2
    $ (note . cat)
      ([ k 0 "0(3,8)"
      , k 0 "[~@2 0 ~@2 0 ~@2 | [0 ~] [-3 ~] [0 ~] ~]"
      , k 0 $ "0(3,8)" |+ 1
      , k 1 "~@2 0 ~@2 4 ~@2"
      ]
    )
    # sus 0.1
    # amp 0.8

all $ id

do
  -- @name steal
  hush
  bd $ n "0  ~ ~ 0? ~@4. [~ 0] 0 ~ [~ 0]"
  sd $ fast 2 $ n "~ [0@3 0??]" # amp ("0.55@3 [0.05|0.6]" |* 0.8)
  oh $ sometimes (chop 2) $ degrade (n "0*16") # amp (range 0.01 0.05 $ rand)
  ch $ fast 8 $ n "0*2" # amp "0.1 0.01"
  rs $ fast 2 $ n "0*[1|1|2] 0!2 0*2" # amp 0.1
  -- trm 4 $ trn
  ht
    $ note
    -- $ (|- 12)
     $ (fast 2 . cat)
       [ k 0 $ "~ 6 9 5 . 8 6 4 2"
       , k 0 $ "~ 1 ~ [6, ~@2 3@3,~@3 1@2]@5"
       , k 0 $ "[~ 0 ~ [5, ~@2 2@3,~@3 0@2]@5]"
       , k 1 $ "[~ 0 ~ [5, ~@2 2@3,~@3 -1@2]@5]" |- 4 |+ 7
       , k 0 $ "~ 6 9 5 . 8 6 4 2"
       , k 0 $ "~ 1 ~ [6, ~@2 3@3,~@3 1@2]@5"
       , k 0 $ press $ "2 4 5 6"
       , k 0 $ press $ "2 4 5 6" |+ 7
      ]
  mm $ fast 2
    $ stack [
      -- midibend $ (slow 8 $ struct "t*128" $ (range 0 8192 $ sine)),
      (note . cat)
      ([ k 0 $ "~ 6 9 5 . 8 6 4 2"
       , k 0 $ "~ 1 ~ [6, ~@2 3@3,~@3 1@2]@5"
       , k 0 $ "[~ 0 ~ [5, ~@2 2@3,~@3 0@2]@5]"
       , k 1 $ "[~ 0 ~ [5, ~@2 2@3,~@3 -1@2]@5]" |- 4
       , k 0 $ "~ 6 9 5 . 8 6 4 2"
       , k 0 $ "~ 1 ~ [6, ~@2 3@3,~@3 1@2]@5"
       , k 0 $ press $ "2 4 5 6"
       , k 0 $ press $ "2 4 5 6" |+ 7
       ])
    # amp 0.4
    # sus 2]
  reface
      $ fast 2
      $ n
      $ cat
      (
        fmap (k 0) [
        "2 4 5 [2|-1] 4 0 4 5"
      , "6 8 9 6 8 -4 -2 -1"
      , "1 2 3 1 2 -1 1 2"
      ] ++ fmap (k 1) [
        "[0 1 2 0 1 -2 1 2 | 0 1 2 3 6 5 3 2]"
      ])
      -- |+ 12
  lt
    $ n
    $ fast 2
    $ cat
      ([ k 0 "0(3,8)"
      , k 0 "[~@2 0 ~@2 0 ~@2 | [0 ~] [-3 ~] [0 ~] ~]"
      , k 0 $ "0(3,8)" |+ 1
      , k 1 "~@2 0 ~@2 4 ~@2"
      ]
    )

do
  -- @name end
  sd silence
  ch silence 
  setF "plink"  0.3



do
  -- @name trans
  -- hush
  all $ swingBy (1/12) 8 . shuffle "1 8"
  bd $ n "0  ~ ~ 0? ~@4. [~ 0] 0 ~ [~ 0]"
  sd $ fast 2 $ n "~ [0@3 0??]" # amp ("0.55@3 [0.05|0.6]" |* 0.8)
  oh $ sometimes (chop 2) $ degrade (n "0*16") # amp (range 0.01 0.05 $ rand)
  ch $ fast 8 $ n "0*2" # amp "0.1 0.01"
  rs $ fast 2 $ n "0*[1|1|2] 0!2 0*2" # amp 0.1
