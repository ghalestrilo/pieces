do
  -- Start
  setF "vibegain" 0.8
  setF "mmgain" 0.6
  setF "mmrel" 3
  setI "bassoffset" 9
  hush

do
  -- @setup
  -- @name setup
  setkey' 0 ("f" |- 11) "lydian"
  setkey' 1 ("fs" |- 11) "phrygian"
  setkey' 4 ("fs" |- 11) "locrian"
  setkey' 2 ((1/4) <~ "[f@3 fs]/4" |- 11) ((1/4) <~ "[lydian@3 minor]/4")
  setkey' 3 "c" "lydian" 
  bank "mc" 91
  bank "mm" 31
  -- all $ (# (orbit 0 # room 0.1))
  -- all id
  -- setcps (93/60/2)
  setcps (98/60/2)
  trbank 10

do
  -- @env rec
  all id

do
  -- @name intro
  let mphrases = ((|+ 5) <$> ["[-3 0] 0!2 0*2", "0 [0*2]!3", "0 [0*2]!2 0", "0!4", "1!2 -1!2"] :: [Pattern Int])
  setI "m1" $ randcat mphrases
  setI "m2" $ randcat mphrases
  mt $ (|+ note 4) $ nok 0 "^m1" # sus 0.2
  ht $ (|+ note 4) $ nok 0 "^m2" # sus 0.2


