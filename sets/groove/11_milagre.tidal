do
  -- @name tinks
  setI "vmel" $ ("[6@4 5@3 3@4 [-3,-1,3]@4 [-3,-1,2]@17]/8" |+ 10)
  mm $ nok 2 "^vmel" # amp "[1.3@11 0.7@21]/8"
  -- rs $ nok 0 $ "[6@4 5@3 3@4 3@4 2@17]/8" |+ 10
  -- cc $ nok 0 $ "[~@4 ~@3 ~@4 -1@4 -1@17]/8" |+ 10
  -- seconds
  ht $ nok 0 "^m2" # sus 0.2 # note (k 0 0 |+ 15)

do
  -- @name drums
  -- trbank 11
  setF "drumgain" 0.87
  setF "kickgain" 1
  setI "kicks" $ "<13 13(3,8) [~@3 13] [13@3 13]>"
  setI "sn" silence
  bd $ n "^kicks" # amp ("^kickgain" |* 0.5)
  sd "[~ 20]"
  ch $ fast 2 $ n "5*2" # amp "0.5 0.1"
  oh $ degradeBy "0 . 1 0@7" $ stack ["<[~ 20] [~ [21*3] ~@2 . 20] ~ ~>", degrade "0*8" #Â amp (range 0.3 0.5 rand)]
  setI "bass" $ ("[0 9 5 6 1 2 4 0@2 9 5 6 1 2 4 -1]/4" |+ 7)
  lt $ nok 0 ("^bass" |+ 7) |+ note "^bassoffset"


